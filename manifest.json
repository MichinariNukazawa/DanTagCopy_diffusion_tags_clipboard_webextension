{
	"manifest_version": 2,
	"name": "DanTagCopy",
	"version": "1.1",
	"icons": {
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["event.js"],
		"persistent": false
	},

	"content_scripts": [{
		"matches": ["*://*.danbooru.donmai.us/*"],
		"js": ["content.js"]
	}],

	"permissions": [
		"activeTab",
		"clipboardWrite",
		"notifications",
		"contextMenus"
	]
}
