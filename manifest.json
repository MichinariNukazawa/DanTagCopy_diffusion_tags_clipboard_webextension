{
	"manifest_version": 2,
	"name": "DanTagCopy",
	"version": "1.6",

	"description": "Tags to clipboard, for diffusion, from danbooru.",
	"homepage_url": "https://github.com/MichinariNukazawa/lina_dicto",
	"author": "michinari.nukazawa@gmail.com",

	"icons": {
		"128": "icon128.png"
	},

	"browser_action": {
		"default_title": "DanTagCopy",
		"default_icon": "icon128.png",
		"default_popup": "popup/popup_menu.html"
	},

	"background": {
		"scripts": ["event.js"],
		"persistent": false
	},

	"content_scripts": [{
		"matches": ["*://*.danbooru.donmai.us/*"],
		"js": ["content.js"]
	}],

	"permissions": [
		"activeTab",
		"clipboardWrite",
		"notifications",
		"storage",
		"contextMenus"
	]
}
